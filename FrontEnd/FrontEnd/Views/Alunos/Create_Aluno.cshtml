@model FrontEnd.Models.Alunos

<h4>Alunos</h4>
<hr />

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}

<form asp-action="Create_Aluno">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-10">
                
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Numero_Aluno" class="control-label"></label>
                            <input asp-for="Numero_Aluno" class="form-control" min="1" />
                            <span asp-validation-for="Numero_Aluno" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Curso" class="control-label"></label>
                            <input asp-for="Curso" class="form-control" />
                            <span asp-validation-for="Curso" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Contacto" class="control-label"></label>
                            <input asp-for="Contacto" class="form-control" />
                            <span asp-validation-for="Contacto" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Instituicao" class="control-label"></label>
                            <input asp-for="Instituicao" class="form-control" />
                            <span asp-validation-for="Instituicao" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-2 p-4">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mt-2" />
                </div>
            </div>
        </div>
</form>
