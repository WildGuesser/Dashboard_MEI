@model IEnumerable<FrontEnd.Models.Alunos>

    <div class="container">
        <div class="d-flex flex-row">

        </div>
        <table id="myTable" class="table table-hover">
            <thead>
                <tr>
                    <th data-type="numeric" class="text">
                        @Html.DisplayNameFor(model => model.Numero_Aluno)
                    </th>
                    <th class="text">
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th class="text">
                        @Html.DisplayNameFor(model => model.Curso)
                    </th>
                    <th class="text">
                        @Html.DisplayNameFor(model => model.Instituicao)
                    </th>
                    <th data-type="text-long" class="text">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text">@Html.DisplayFor(modelItem => item.Numero_Aluno)</td>
                        <td class="text">@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td class="text">@Html.DisplayFor(modelItem => item.Curso)</td>
                        <td class="text">@Html.DisplayFor(modelItem => item.Instituicao)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    
    <script type="text/javascript">
    $(document).ready(function () {
            var table = $('#myTable').DataTable({
                pageLength: parseInt($('#rows-per-page').val()), // Set the initial page length
                lengthChange: false, // Disable the built-in length menu
                searching: false, // Disable the built-in search box
                paging: true, // Enable pagination
                info: false, // Disable the table information display
            });

        $('#rows-per-page').on('change', function () {
            table.page.len(parseInt($(this).val())).draw();
        });

        // Handle the search button click event
        $('#search-btn').on('click', function () {
            table.search($('#search-input').val()).draw();
        });
    });
</script>

    <script>
        document.getElementById("search-input").addEventListener("input", function () {
            var input, filter, table, tr, td, i, j, txtValue;
            input = document.getElementById("search-input");
            filter = input.value.toUpperCase();
            table = document.getElementById("myTable");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td");
                for (j = 0; j < td.length; j++) {
                    if (td[j]) {
                        txtValue = td[j].textContent || td[j].innerText;
                        if (txtValue.toUpperCase().indexOf(filter) > -1) {
                            tr[i].style.display = "";
                            break; // break the loop once a match is found in any column
                        } else {
                            tr[i].style.display = "none";
                        }
                    }
                }
            }
        });
    </script>


    @section Scripts
        {
            <script src="~/js/tables.js" asp-append-version="true"></script>
        }


