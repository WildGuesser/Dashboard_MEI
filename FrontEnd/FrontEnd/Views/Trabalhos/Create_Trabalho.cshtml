@model FrontEnd.Models.Trabalhos
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<h4>Trabalhos</h4>
<hr />
<div class="row container-fluid">
    <div class="col-md-12">
        <form asp-action="Create_Trabalho">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-md-3">
                    <div class="form-floating mb-3">
                        <input asp-for="Titulo" class="form-control" placeholder=" " />
                        <label asp-for="Titulo">Título</label>
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating mb-3">
                        <input asp-for="ReferenciaInfo" class="form-control" placeholder=" " />
                        <label asp-for="ReferenciaInfo">Referencia Info</label>
                        <span asp-validation-for="ReferenciaInfo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating mb-3">
                        <input asp-for="Tipo" class="form-control" placeholder=" " />
                        <label asp-for="Tipo">Tipo</label>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating mb-3">
                        <input asp-for="AdendaProtocolo" class="form-control" placeholder=" " />
                        <label asp-for="AdendaProtocolo">Adenda Protocolo</label>
                        <span asp-validation-for="AdendaProtocolo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <div class="btn-group" role="group" aria-label="Aluno input group">
                        <div class="form-floating">
                            <input asp-for="Aluno_Id" id="AlunoId" class="form-control" placeholder=" "/>
                            <label asp-for="Aluno_Id"> @Html.DisplayNameFor(model => model.Alunos.Id)</label>
                            <span asp-validation-for="Aluno_Id" class="text-danger"></span>
                        </div>
                        <a id="btnAdicionarAluno" class="btn btn-outline-secondary"
                           asp-action="Alunos_Index" data-ajax="true" data-ajax-method="get"
                           data-ajax-mode="replace" data-ajax-update="#target"
                           data-toggle="modal" data-target="#myModal">Adicionar Aluno</a>
                    </div>
                </div>
                        
                <div class="col-md-3 mr-5">
                    <div class="form-floating mb-3">
                        <input asp-for="Alunos.Nome" id="AlunoNome" class="form-control" placeholder=" " disabled />
                        <label asp-for="Alunos.Nome">@Html.DisplayNameFor(model => model.Alunos.Nome)</label>
                        <span asp-validation-for="Alunos.Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1 mr-5">
                    <div class="form-floating mb-3">
                        <input asp-for="Alunos.Numero_Aluno" id="AlunoNumero" class="form-control" placeholder=" " disabled />
                        <label asp-for="Alunos.Numero_Aluno">@Html.DisplayNameFor(model => model.Alunos.Numero_Aluno)</label>
                        <span asp-validation-for="Alunos.Numero_Aluno" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1 mr-5">
                    <div class="form-floating mb-3">
                        <input asp-for="Nota" class="form-control" placeholder=" " />
                        <label asp-for="Nota">Nota</label>
                        <span asp-validation-for="Nota" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <div class="btn-group" role="group" aria-label="Aluno input group">
                        <div class="form-floating">
                            <input asp-for="Empresa_Id" id="EmpresaId" class="form-control" placeholder=" "  />
                            <label asp-for="Empresa_Id"> @Html.DisplayNameFor(model => model.Empresas.Id)</label>
                            <span asp-validation-for="Empresa_Id" class="text-danger"></span>
                        </div>
                        <a id="btnAdicionarEmpresa" class="btn btn-outline-secondary"
                           asp-action="Empresas_Index" data-ajax="true" data-ajax-method="get"
                           data-ajax-mode="replace" data-ajax-update="#target"
                           data-toggle="modal" data-target="#myModal">Adicionar Empresa</a>
                    </div>
                </div>
                <div class="col-md-3 mr-5">
                    <div class="form-floating mb-3">
                        <input asp-for="Empresas.Nome" id="EmpresaNome" class="form-control" placeholder=" " disabled />
                        <label asp-for="Empresas.Nome">@Html.DisplayNameFor(model => model.Empresas.Nome)</label>
                        <span asp-validation-for="Empresas.Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1 mr-5">
                    <div class="form-floating mb-3">
                        <input asp-for="Empresas.Local" id="EmpresaLocal" class="form-control" placeholder=" " disabled />
                        <label asp-for="Empresas.Local">@Html.DisplayNameFor(model => model.Empresas.Local)</label>
                        <span asp-validation-for="Empresas.Local" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1 mr-5">
                    <div class="form-floating mb-3">
                        <input asp-for="Empresas.Protocolo" id="EmpresaProtocolo" class="form-control" placeholder=" "disabled  />
                        <label asp-for="Empresas.Protocolo">@Html.DisplayNameFor(model => model.Empresas.Protocolo)</label>
                        <span asp-validation-for="Empresas.Protocolo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2 mr-5">
                    <div class="form-floating mb-3">
                        <input asp-for="Juri.Data_Defesa" id="DataDefesa" class="form-control" placeholder=" " />
                        <label asp-for="Juri.Data_Defesa">@Html.DisplayNameFor(model => model.Juri.Data_Defesa)</label>
                        <span asp-validation-for="Juri.Data_Defesa" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-9" id="membroInfo" style="display:none">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <div class="btn-group" role="group" aria-label="Aluno input group">
                                <div class="form-floating">
                                    <input asp-for="Membro.Id" id="MembroId" class="form-control" placeholder=" " />
                                    <label asp-for="Membro.Id"> @Html.DisplayNameFor(model => model.Membro.Id)</label>
                                    <span asp-validation-for="Membro.Id" class="text-danger"></span>
                                </div>
                                <a id="btnAdicionarJuri" class="btn btn-outline-secondary"
                                   asp-action="Membros_Index" data-ajax="true" data-ajax-method="get"
                                   data-ajax-mode="replace" data-ajax-update="#target"
                                   data-toggle="modal" data-target="#myModal">Adicionar Juri</a>
                            </div>
                        </div>
                        <div class="col-md-2 mr-5">
                            <div class="form-floating mb-3">
                                <input asp-for="Membro.Nome" id="MembroNome" class="form-control" placeholder=" " disabled />
                                <label asp-for="Membro.Nome">@Html.DisplayNameFor(model => model.Membro.Nome)</label>
                                <span asp-validation-for="Membro.Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-2 mr-5">
                            <div class="form-floating mb-3">
                                <input asp-for="Membro.Email" id="MembroEmail" class="form-control" placeholder=" " disabled />
                                <label asp-for="Membro.Email">@Html.DisplayNameFor(model => model.Membro.Email)</label>
                                <span asp-validation-for="Membro.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2 p-4">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mt-2" />
                </div>
            </div>
        </form>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="target">
                    @await Html.PartialAsync("Select_Aluno.cshtml", new FrontEnd.Data.Paging_Models.AlunosPagingModel().AlunosList)
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    const dataDefesa = document.querySelector('#DataDefesa');
    const membroInfo = document.querySelector('#membroInfo');

    dataDefesa.addEventListener('change', () => {
        if (dataDefesa.value) {
            membroInfo.style.display = 'block';
        } else {
            membroInfo.style.display = 'none';
        }
    });
</script>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
