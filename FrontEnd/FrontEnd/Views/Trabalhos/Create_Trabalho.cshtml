                        <div class="col-md-2 mr-5">
                            <div class="form-floating mb-3">
                                <input asp-for="Membro.Email" id="PresidenteMembroEmail" class="form-control" placeholder=" " disabled />
                                <label asp-for="Membro.Email">@Html.DisplayNameFor(model => model.Membro.Email)</label>
                                <span asp-validation-for="Membro.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    @*End Presidente Selection*@
                    @*Arguent Selection*@
