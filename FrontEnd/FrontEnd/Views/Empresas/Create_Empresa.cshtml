@model FrontEnd.Models.Empresas

<h4>Criar Empresas</h4>
<hr />

<form asp-action="Create_Empresa">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-10">
            <div class="row">
                <div class="col">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Local" class="control-label"></label>
                    <input asp-for="Local" class="form-control" />
                    <span asp-validation-for="Local" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Email_empresa" class="control-label"></label>
                    <input asp-for="Email_empresa" class="form-control" />
                    <span asp-validation-for="Email_empresa" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-2 p-4">
            <input type="submit" value="Create" class="btn btn-primary mt-2" />
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
